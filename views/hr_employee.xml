<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="ji_hr_employee" model="ir.ui.view">
        <field name="name">hr.employee.jibarito</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="ji_partner_id" groups="jibarito.group_ji_apply_developments"/>
                <field name="ji_percent_commission" groups="jibarito.group_ji_apply_developments"/>
            </xpath>
            <!--            <xpath expr="//field[@name='user_partner_id']" position="attributes">-->
            <!--                <attribute name="invisible">1</attribute>-->
            <!--            </xpath>-->
        </field>
    </record>
</odoo>