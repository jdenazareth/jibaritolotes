<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="ji_product_product" model="ir.ui.view">
        <field name="name">product.product.jibarito</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="ji_area" groups="jibarito.group_ji_apply_developments"/>
                <field name="ji_street" groups="jibarito.group_ji_apply_developments"/>
                <field name="ji_corner_with" groups="jibarito.group_ji_apply_developments"/>
            </xpath>
        </field>
    </record>
</odoo>